#include<stdio.h>
void main()
{
	int n,i,j,s;
	printf("Enter the n value: ");
	scanf("%d",&n);

	for(i=0;i<n;i++)
	{
	    for(s=0;s<n-i-1;s++)
		{
			printf("*");
		}
		for(int j=0; j<=i; j++)
		{
		    printf("%d", j+1);
		}
		for(int k=i; k>0; k--)
		{
		    printf("%d",k);
		}
	
		printf("\n");
	}

}

Output:

Enter the n value: 5
****1
***121
**12321
*1234321
123454321
