#include<stdio.h>

void main()
{
 int i,n,m;
 printf("Enter the number:");
 scanf("%d",&n);
 for(i=1;i<=10;i++){
 m=i*n;
printf("%d*%d=%d",i,n,m);
printf("\n");
 }
 printf("\n");
printf("\n");

 for(i=1;i<=10;i++){
 m=n-i;
printf("%d-%d=%d",n,i,m);
printf("\n");
 }
    return 0;
}

output:

Enter the number:5
1*5=5
2*5=10
3*5=15
4*5=20
5*5=25
6*5=30
7*5=35
8*5=40
9*5=45
10*5=50


5-1=4
5-2=3
5-3=2
5-4=1
5-5=0
5-6=-1
5-7=-2
5-8=-3
5-9=-4
5-10=-5
